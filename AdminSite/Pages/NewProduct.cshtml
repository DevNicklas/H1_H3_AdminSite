@page
@model AdminSite.Pages.NewProductModel

<link rel="stylesheet" href="~/css/root.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/new-page.css" asp-append-version="true" />

@Html.Partial("_Menu.cshtml")

<div class="new-page">
    <form method="post">
        <H3>New product</H3>
        <label>Elements marked with * are mandatory.</label>
        <div class="new-input">
            <label for="ProductName">ProductName*</label>
            <input type="text" id="ProductName" class="mandatory" name="ProductName" placeholder="ProductName" required />
        </div>
        <div class="new-input">
            <label for="Quantity">Quantity*</label>
            <input type="number" id="Quantity" class="mandatory" name="Quantity" placeholder="Quantity" required />
        </div>
        <div class="new-input">
            <label for="Price">Price*</label>
            <input type="text" id="Price" class="mandatory" name="Price" placeholder="Price" required />
        </div>
        <div class="new-input">
            <label for="Category">Category*</label>
            <select id="Category" class="mandatory" name="Category" required>
                <option>Choose a category</option>
                @{
                    foreach(string[] category in @Model.Categories)
                    {
                        <option value="@category[0]">@category[1]</option>
                    }
                }
            </select>
        </div>
        <div class="new-input">
            <label for="Description">Description*</label>
            <textarea type="text" id="Description" class="mandatory" name="Description" placeholder="Description" required></textarea>
        </div>
        <input type="submit" value="Create Product" />
    </form>
</div>

